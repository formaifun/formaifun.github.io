<div class="col-md-4 post-list-item">
  <a href="<%= post.the_url %>" itemprop="url">
    <div class="card mb-4">
      <%= raw post.the_link_thumb({}, {class: 'card-img-top'}) %>
      <div class="card-body">
        <div class="card-text"><%= post.the_title %></div>
        <div class="d-flex justify-content-between align-items-center">
          <p class="card-desctiprion"><%= raw post.the_excerpt %> <%= post.the_edit_link %></p>
        </div>
      </div>
    </div>
  </a>
</div>